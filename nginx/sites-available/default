upstream data {
    server 127.0.0.1:5000;
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;

    server_name data.osmcanada.ca;

    ssl_certificate             /etc/letsencrypt/live/data.osmcanada.ca/fullchain.pem;
    ssl_certificate_key         /etc/letsencrypt/live/data.osmcanada.ca/privkey.pem;
    ssl_trusted_certificate     /etc/letsencrypt/live/data.osmcanada.ca/fullchain.pem;

    location / {
        proxy_pass http://data;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }
}

server {
    server_name www.data.osmcanada.ca data.osmcanada.ca;
    return 301 https://data.osmcanada.ca$request_uri;
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;

    ssl_certificate             /etc/letsencrypt/live/data.osmcanada.ca/fullchain.pem;
    ssl_certificate_key         /etc/letsencrypt/live/data.osmcanada.ca/privkey.pem;
    ssl_trusted_certificate     /etc/letsencrypt/live/data.osmcanada.ca/fullchain.pem;

    server_name www.data.osmcanada.ca data.osmcanada.ca;
    return 301 https://data.osmcanada.ca$request_uri;
}
